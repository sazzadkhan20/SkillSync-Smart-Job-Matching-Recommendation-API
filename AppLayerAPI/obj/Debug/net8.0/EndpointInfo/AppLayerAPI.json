  "components": {
    "schemas": {
      "CandidateDTO": {
        "required": [
          "email",
          "fullName",
          "phone"
        ],
        "type": "object",
        "properties": {
          "fullName": {
            "maxLength": 100,
            "minLength": 3,
            "type": "string"
          },
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "phone": {
            "minLength": 1,
            "pattern": "^(?:\\+8801|01)[3-9]\\d{8}$",
            "type": "string"
          },
          "skills": {
            "type": "string",
            "nullable": true
          },
          "candidateType": {
            "type": "string",
            "nullable": true
          },
          "experienceLevel": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "JobApplicationDTO": {
        "required": [
          "candidateId",
          "jobId"
        ],
        "type": "object",
        "properties": {
          "candidateId": {
            "maximum": 2147483647,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "jobId": {
            "maximum": 2147483647,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "JobPostDTO": {
        "required": [
          "companyName",
          "location",
          "skillsRequired",
          "title"
        ],
        "type": "object",
        "properties": {
          "companyName": {
            "maxLength": 100,
            "minLength": 3,
            "type": "string"
          },
          "title": {
            "maxLength": 100,
            "minLength": 3,
            "type": "string"
          },
          "skillsRequired": {
            "minLength": 1,
            "type": "string"
          },
          "experienceLevel": {
            "maximum": 30,
            "minimum": 0,
            "type": "integer",
            "format": "int32"
          },
          "location": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
